[*]
indent_style             = space
insert_final_newline     = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size  = 4

[*.csproj]
indent_style = space
indent_size  = 2

[*.js]
indent_style = space
indent_size  = 2

[*.json]
indent_style = space
indent_size  = 2

[Makefile]
indent_style = tab
indent_size  = 2
